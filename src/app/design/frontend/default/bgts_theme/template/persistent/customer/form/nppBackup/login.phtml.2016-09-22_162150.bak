?>
<div class="container col-md-12">
	<div class="panel panel-default">
		<div class="panel-heading"><?php echo $this->__('Login or Create an Account') ?></div>
		<div class="panel-body">
			<?php echo $this->getMessagesBlock()->toHtml() ?>
